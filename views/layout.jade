doctype html
html
  head
    block head
      meta(charset='utf-8')
      meta(name="viewport" content="width=device-width, initial-scale=1.0")
      
      link(rel="stylesheet" href="/css/normalize.css")
      link(rel="stylesheet" href="/css/foundation.min.css")
      
      link(rel='stylesheet', href='/css/app.css')
      
      script(src="/js/vendor/modernizr.js")
  body
    .header
      //div: a(href="/") 
      //  img(src="/img/logo.png").logo
      //  h1.title.hide-for-small-only Homes for the Lonely
      div
        a(href="/"): img(src="/img/logo.png", alt="Homes for the Lonely").logo
        .banner_wrapper: img(src="/img/xixi.jpg").banner.hide-for-medium-down
      nav.top-bar(role="navigation" data-topbar)
        ul.title-area
          li.name: span.show-for-small-only Homes for the Lonely
          li.toggle-topbar.menu-icon: a(href="#"): span
        section.top-bar-section
          ul
            li: a(href="/") Home
            li: a(href="/kids") Kids          
            li: a(href="/adopt") Adopt
            li: a(href="/help_someone_adopt") Help Someone Adopt
            li: a(href="/contact") Contact
    .content
      block content
    
    script(src="/js/vendor/jquery.js")
    script(src="/js/foundation.min.js")
    script(src="/js/foundation.topbar.js")
    script $(document).foundation()
