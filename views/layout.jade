doctype html
html
  head
    block head
      title= (title ? title + " | " : "") + "Homes for the Lonely"
      meta(charset='utf-8')
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      
      link(rel="stylesheet", href="/css/normalize.css")
      link(rel="stylesheet", href="/css/foundation.min.css")
      
      link(rel='stylesheet', href='/css/app.css')
      
      script(src="/js/vendor/modernizr.js")
  body
    .header
      //div: a(href="/") 
      //  img(src="/img/logo.png").logo
      //  h1.title.hide-for-small-only Homes for the Lonely
      div
        a(href="/"): img(src="/img/logo.png", alt="Homes for the Lonely").logo
        .banner_wrapper: img(src="/img/top-banner.jpg").banner.hide-for-medium-down
      nav.top-bar(role="navigation", data-topbar)
        ul.title-area
          li.name: span.show-for-small-only Homes for the Lonely
          li.toggle-topbar.menu-icon: a(href="#"): span
        section.top-bar-section
          ul
            li: a(href="/").link_home Home
            li: a(href="/kids").link_kids Kids
            li: a(href="/adopt").link_adopt Adopt
            li: a(href="/help_someone_adopt").link_help_someone_adopt Help Someone Adopt
            li: a(href="/contact").link_contact Contact
    .content
      block content
    
    script(src="/js/vendor/jquery.js")
    script(src="/js/foundation.min.js")
    script(src="/js/foundation.topbar.js")
    script $(document).foundation()
